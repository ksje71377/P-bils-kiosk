<Window x:Class="P_bils_kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_bils_kiosk"
        mc:Ignorable="d"
        Title="MainWindow" Height="1280" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="100" Grid.ColumnSpan="4" RenderTransformOrigin="0.5,0.5" Margin="10,96,-10,-96">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="3.437"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>Umove P-bils System</TextBlock>
        <TextBlock FontSize="50" RenderTransformOrigin="1.029,1.426" Grid.ColumnSpan="4" Margin="22,258,16,-216"><LineBreak />Tryk på det grønne felt når du skal UD.<LineBreak />Tryk på det røde felt når du er kommet hjem.</TextBlock>
        <Button Margin="55,910,21,54" Content="AFLEVER BIL" FontSize="90" Cursor="Hand" Grid.ColumnSpan="2">
            <Button.Height>300</Button.Height>
            <Button.Width>500</Button.Width>
            <Button.Foreground>White</Button.Foreground>
            <Button.Background>Red</Button.Background>
        </Button>
        <Image Source="bin/images/IN.BMP" Margin="0,428,0,-429" HorizontalAlignment="Left" Width="431" Grid.Column="3"/>
        <Button Margin="55,556,21,408" Content="TAG BIL" Grid.ColumnSpan="2" FontSize="90" Cursor="Hand">
            <Button.Height>300</Button.Height>
            <Button.Width>500</Button.Width>
            <Button.Foreground>White</Button.Foreground>
            <Button.Background>Green</Button.Background>
        </Button>
        <Image Source="bin/images/OUT.BMP" Margin="0,56,17,-57" HorizontalAlignment="Right" Width="431" Grid.Column="3"/>
    </Grid>


</Window>
