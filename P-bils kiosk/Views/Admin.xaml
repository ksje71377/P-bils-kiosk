<Window x:Class="P_bils_kiosk.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_bils_kiosk"
        mc:Ignorable="d"
        Title="Administrationsmodul - Puljebils Software" Height="500" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <!-- Binder InputAccessKey -->


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Overskrift -->
            <RowDefinition Height="Auto"/>
            <!-- Instruktion -->
            <RowDefinition Height="Auto"/>
            <!-- Adgangskode label + textbox -->
            <RowDefinition Height="Auto"/>
            <!-- Login knap -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Overskrift -->
        <TextBlock Grid.Row="0"
               HorizontalAlignment="Center"
               FontSize="35"
               FontWeight="DemiBold"
               Margin="0,10">Administrationsmodul</TextBlock>

        <!-- Instruktion -->
        <TextBlock Grid.Row="1"
               HorizontalAlignment="Center"
               FontSize="18"
               FontWeight="Light"
               Margin="0,10">Indtast adgangskoden. Tryk på Login.</TextBlock>

        <!-- Adgangskode + label -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock HorizontalAlignment="Center" FontSize="18" FontWeight="Light">Adgangskode:</TextBlock>
            <TextBox Width="Auto" Height="30"
                 Margin="0,5"
                 Background="White"
                 Text="{Binding InputAccessKey, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Login knap -->
        <Button Grid.Row="3"
            HorizontalAlignment="Center"
            FontSize="24"
            Background="AliceBlue"
            Margin="0,10"
            Command="{Binding LoginCommand}">Login</Button>
    </Grid>
</Window>
