<Window x:Class="P_bils_kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_bils_kiosk"
        mc:Ignorable="d"
        Title="Puljebils Software"
        Background="GhostWhite"
        WindowState="Maximized">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Viewbox Stretch="Uniform">
    <Grid Height="1280" Width="1024">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Logo -->
            <RowDefinition Height="Auto" />
            <!-- Instruktion -->
            <RowDefinition Height="*" />
            <!-- Knapper -->
            <RowDefinition Height="Auto" />
            <!-- Admin knap -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <Image Grid.Row="0" Grid.ColumnSpan="2"
               Source="/images/symbol.bmp"
               HorizontalAlignment="Center"
               Margin="0,20,0,20"
               Height="Auto" />

        <!-- Instruktion -->
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                   FontSize="36"
                   Text="Brug musen for at klikke på den rigtige knap."
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"
                   TextAlignment="Center"
                   FontWeight="SemiBold" />

        <!-- Venstre side: BIL UD -->
        <StackPanel Grid.Row="2" Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20">
            <Image Source="/images/OUT.bmp" Width="300" Margin="0,0,0,10"/>
            <Button Content="BIL UD"
                    FontSize="60"
                    Width="450"
                    Height="160"
                    Background="Green"
                    Foreground="White"
                    Command="{Binding OpenOutCommand}" />
        </StackPanel>

        <!-- Højre side: BIL HJEM -->
        <StackPanel Grid.Row="2" Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20">
            <Image Source="/images/IN.bmp" Width="300" Margin="0,0,0,10"/>
            <Button Content="BIL HJEM"
                    FontSize="60"
                    Width="450"
                    Height="160"
                    Background="Red"
                    Foreground="White"
                    Command="{Binding OpenInCommand}" />
        </StackPanel>

        <!-- Admin knap -->
        <Button Grid.Row="3" Grid.Column="1"
                Content="Administration - KUN DRIFT"
                FontSize="26"
                FontWeight="Bold"
                Width="400"
                Height="60"
                Background="Yellow"
                Foreground="Black"
                HorizontalAlignment="Right"
                Margin="0,30,30,30"
                Command="{Binding OpenAdminCommand}" />
    </Grid>
    </Viewbox>
</Window>