<Window x:Class="P_bils_kiosk.carOut"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bil UD fra garagen"
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Overskrift -->
        <TextBlock Grid.Row="0"
                   FontSize="22"
                   FontWeight="Bold"
                   TextAlignment="Left"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Left"
                   Margin="0 0 0 20">
Bil UD fra garagen
        </TextBlock>

        <!-- CHF nr -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Margin="0 0 0 15">
            <TextBlock FontSize="15" Text="SKRIV chaufførnr:"/>
            <TextBox Width="200"
                     Height="30"
                     Margin="0 5 0 0"
                     MaxLength="4"
                     Text="{Binding ChaufførNummer, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Vælg bil -->
        <StackPanel Grid.Row="2"
            Orientation="Vertical"
            HorizontalAlignment="Left"
            Margin="0 0 0 15">
            <TextBlock FontSize="15" Text="VÆLG bilen du skal køre (se på nøgle):"/>
            <ComboBox HorizontalAlignment="Left" Width="250"
              Height="30"
              Margin="0 5 0 0"
              ItemsSource="{Binding UdBiler}"
              SelectedItem="{Binding ValgtBil, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Vælg destination -->
        <StackPanel Grid.Row="3"
            Orientation="Vertical"
            HorizontalAlignment="Left"
            Margin="0 0 0 15">
            <TextBlock FontSize="15" Text="VÆLG destination (hvor du skal køre hen i bilen):"/>
            <ComboBox HorizontalAlignment="Left" Width="250"
              Height="30"
              Margin="0 5 0 0"
              ItemsSource="{Binding UdDestinationer}"
              SelectedItem="{Binding Destination, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Registrer-knap -->
        <Button Grid.Row="4"
                Content="SEND INFORMATION"
                Width="300"
                Height="45"
                Background="Blue"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="0 20 0 0"
                Command="{Binding BekræftCommand}"/>
    </Grid>
</Window>