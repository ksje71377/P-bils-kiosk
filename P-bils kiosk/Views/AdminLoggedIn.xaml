<Window x:Class="P_bils_kiosk.ViewModels.AdminLoggedIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminLoggedIn" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Background="LightGray" Grid.Row="0" Grid.ColumnSpan="1"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0">
            <TextBlock Grid.Row="0" Text="Adminpanel" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Text="Dette er en betaversion og modulet her er ikke færdigbygget." Margin="0,0,0,10"/>
            <Button Grid.Row="2" Content="Send testmail" Click="SendTestmail_Click" Width="150" Height="40"/>
        </StackPanel>
    </Grid>
</Window>